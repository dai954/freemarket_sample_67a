!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title FreemarketSample67a
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    
  %button.fixed_btn 
    %h1 出品する
    = image_tag "icon/icon_camera.png", height: '62%', width: '62%'
  .header
    .header__box
      .header__box__1
        .header__box__1__title-box
          .header__box__1__title-box__title
            = image_tag 'logo/logo.png', height: '40px', width: '140px'
              
        .header__box__1__search-box
          = form_with(url: root_path, local: true, method: :get, class: "header__box__1__search-box__box") do |f|
            = f.text_field :keyword, placeholder: "キーワードから探す", class: "header__box__1__search-box__box__text"
            = image_submit_tag 'icon/icon-search 1.png', height: '19px', width: '19px', class: 'header__box__1__search-box__box__submit'
      .header__box__2
        .header__box__2__content
          %ul
            %li
              = link_to root_path do
                カテゴリー
            %li
              = link_to root_path do
                ブランド
        .header__box__2__login
          %ul
            %li
              = link_to root_path do
                ログイン
            %li
              = link_to root_path do
                新規会員登録
    
    
  = yield

  .footer-sub
    .footer-sub__box
      %h2 だれでもかんたん、人生を変えるフリマアプリ
      %p 今すぐ無料ダウンロード
    .footer-sub__app-google
      .footer-sub__app-google__app
        %a{:href => "https://apps.apple.com/jp/app/itunes-store/id915061235?mt=8", :style => "display:inline-block;overflow:hidden;background:url(https://linkmaker.itunes.apple.com/ja-jp/badge-lrg.svg?releaseDate=2016-06-01&kind=iossoftware&bubble=ios_apps) no-repeat;width:135px;height:40px;"}
      .footer-sub__app-google__google
        %a{:href => "https://play.google.com/store/apps?pcampaignid=pcampaignidMKT-Other-global-all-co-prtnr-py-PartBadge-Mar2515-1"}
          %img{:alt => "Google Play で手に入れよう", :src => "https://play.google.com/intl/en_us/badges/images/generic/ja_badge_web_generic.png", :width => "160px"}/
  .footer
    .footer__contents
      .footer__contents__content
        %h2 FURIMAについて
        %ul
          %li
            = link_to root_path do
              会社概要（運営会社）
          %li
            = link_to root_path do
              プライバシーポリシー
          %li
            = link_to root_path do
              FURIMA利用規約
          %li
            = link_to root_path do
              ポイントに関する特約
      .footer__contents__content
        %h2 FURIMAを見る
        %ul
          %li
            = link_to root_path do
              カテゴリー一覧
          %li
            = link_to root_path do
              ブランド一覧
      .footer__contents__content
        %h2 ヘルプ＆ガイド
        %ul
          %li
            = link_to root_path do
              FURIMAガイド
          %li
            = link_to root_path do
              FURIMAロゴ利用ガイドライン
          %li
            = link_to root_path do
              お知らせ
    .footer__logo
      %h1
        = image_tag 'logo/logo-white.png', height: '44px', width: '154px'
    %p © FURIMA