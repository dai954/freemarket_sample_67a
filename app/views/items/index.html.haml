            = image_tag 'logo/google-play-badge.png', alt: 'Google Play で手に入れよう', height: '', width: '160px'
  .main__box4
    %h2 FURIMAの特徴
    .main__box4__box
      .main__box4__box__box1
        .main__box4__box__box1__image-box
          = image_tag 'icon/icon-01.png', height: 'auto', width: '100%', class: 'main__box4__box__box1__image-box__image'
        %h3 簡単に売り買いできる
        %p スマホひとつで、いつでもどこでも簡単に出品・購入が可能!
      .main__box4__box__box1
        .main__box4__box__box1__image-box
          = image_tag 'icon/icon-03.png', height: 'auto', width: '100%', class: 'main__box4__box__box1__image-box__image'
        %h3 売上金は即日振り込みに対応
        %p 午前9時までに振込を依頼いただければ、翌日に指定の口座に入金いたします!
      .main__box4__box__box1
        .main__box4__box__box1__image-box
          = image_tag 'icon/icon-04.png', height: 'auto', width: '100%', class: 'main__box4__box__box1__image-box__image'
        %h3 様々な支払いに対応
        %p お支払いは、クレジットカードだけでなく、ポイントや売上金など多彩な方法があります。
  .main__box5
    %h2 ピックアップカテゴリー
    .main__box5__box
      .main__box5__box__title
        = link_to root_path do
          %h3 新規投稿商品
      .main__box5__box__product-box
        - @item.first(3).each do |item|
          - item.images.first(3).each do |image|
            .main__box5__box__product-box__product
              = link_to "/items/#{item.id}", method: :get do
                -if item.buyer_id.present?
                  .main__box5__box__product-box__product__sold
                    .main__box5__box__product-box__product__sold__inner
                      SOLD
                  .main__box5__box__product-box__product__image-box
                    = image_tag image.images, height: '150px', width: '220px', class: 'main__box5__box__product-box__product__image-box__image'              
                  .main__box5__box__product-box__product__show-box
                    %h3
                      = item.name
                    .main__box5__box__product-box__product__show-box__date
                      %ul
                        %li
                          = item.price
                          円
                        %li 
                          %span ★
                          = item.like
                      %p (税込)
                - else 
                  .main__box5__box__product-box
                    - @item.first(3).each do |item|
                      - item.images.first(3).each do |image|
                        .main__box5__box__product-box__product
                          = link_to "/items/#{item.id}", method: :get do
                            .main__box5__box__product-box__product__image-box
                              = image_tag image.images, height: '150px', width: '220px', class: 'main__box5__box__product-box__product__image-box__image'              
                            
                            .main__box5__box__product-box__product__show-box
                              %h3
                                = item.name
                              .main__box5__box__product-box__product__show-box__date
                                %ul
                                  %li
                                    = item.price
                                    円
                                  %li 
                                    %span ★
                                    = item.like
                                %p (税込)
        
