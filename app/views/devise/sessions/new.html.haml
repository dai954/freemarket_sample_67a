.header
  .header__logo
    = image_tag "logo.png", class: "logo", width:"185px", height:"49px"


.contents
  .contents__block
    .contents__block__login-no-account
      アカウントをお持ちでない方はこちら
      .contents__block__login-no-account__aaa
        = link_to "新規会員登録", new_user_registration_path, class: "aaa"
  .contents__top
    .contents__top__1
      .contents__top__1__facebook
        Facebookでログイン 
      .contents__top__1__Google
        Googleでログイン
      .contents__top__1__mail
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .field
            .field-label
              = f.label :email
            .field-input
              = f.email_field :email, autofocus: true
            .field
              .field-label
                = f.label :password
                %i (英数字8文字以上)
              .field-input
                = f.password_field :password, autocomplete: "off"
            .actions
              = f.submit "Log in", class: 'btn'

