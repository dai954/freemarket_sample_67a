#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--main.user-form
      新規会員登録
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .field
          .field-label
            = f.label :ニックネーム
            %i 必須
          .field-input
            = f.text_field :name, autofocus: true
        .field
          .field-label
            = f.label :姓
            %i 必須
          .field-input
            = f.text_field :last_name, autofocus: true
        .field
          .field-label
            = f.label :姓（カナ）
            %i 必須
          .field-input
            = f.text_field :ruby_last, autofocus: true
        .field
          .field-label
            = f.label :名
            %i 必須
          .field-input
            = f.text_field :first_name, autofocus: true
        .field
          .field-label
            = f.label :名（カナ）
            %i 必須
          .field-input
            = f.text_field :ruby_first, autofocus: true
        .field
          .field-label
            = f.label :生年月日
            %i 必須
          .field-input
            = f.text_field :birthday
        .field
          .field-label
            = f.label :電話番号
            %i 任意
          .field-input
            = f.text_field :tel
        .field
          .field-label
            = f.label :eメール
            %i 必須
          .field-input
            = f.email_field :email
        .field
          .field-label
            = f.label :password, "パスワード(英数字8文字以上)"
            %i 必須
          .field-input
            = f.password_field :password, autocomplete: "off"
        .field
          .field-label
            = f.label :パスワード（確認用）
            %i 必須
          .field-input
            = f.password_field :password_confirmation, autocomplete: "off"

        .actions
          = f.submit "新規会員登録", class: "btn"